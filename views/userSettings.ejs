<body style="background: blue;">
    <ul>
        <li><a href="/users/profileImage"></a> Profile-image</li>
        <li>Update Email</li>
        <li>Update Phone Number</li>
        
    </ul>
    <%- include ("./partials/messages") %>
    <form action="/users/userSettings" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="ProfileImage">Profile Image</label>
            <i class="fas fa-image" ></i>
            <input type="file" id="ProfileImage" name="ProfileImage" class="form-control" value="<%=profileImage%>"
                 />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <i class="fas fa-envelope " aria-hidden="true"></i>
            <input type="email" id="email" name="email" class="form-control" value="<%=email%>"
                value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
            <label for="phone">Contact</label>
            <i class="fas fa-phone " aria-hidden="true"></i>
            <input type="number" id="phone" name="contact"
                value="<%=contact%>" />
        </div>
        <div></div>
        <button type="submit" class="btn">
            Sumbit
        </button>
    </form>
   
</body>
