<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" type="text/css" href="/static/css/styleA.css" />
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    
    
    <title>BLOG PROJECT</title>
    
  </head>
  <body>
    <%- include ("./partials/messages") %>
    <header class="navigation-bar">
      <ul>
        <li>
          <a href="/admin/logout"> Logout</a>
        </li>
        <li>
          <a href="/admin/settings">Settings</a>
        </li>
        <li>
          <a href="/" target="_blank">Users</a>
        </li>
      </ul>
    </header>
    <div id= 'editing' type="show">
    <section class="post">
      <div id="posts">
        <% posts.forEach(function(post){%> 
        
          
         
          <div class="post-element">
            <h1 class="post-title" id="<%=post._id%>"><%- post.title %></h1>
            <article id="<%=post._id%>"><%- post.post %></article>
            <button
              class="remove"
              onClick="return confirm('Are you sure you want to delete this post?')"
              id="remove"
            >
              <a href="/admin/delete?post=<%=post._id%>">Delete </a>
            </button>
            <button class="edit" onClick="edit(event)" value="<%=post._id%>">Edit</button>
            <!-- <input id="postId" type="hidden" ></input> -->
           
          </div>
         
        
        <%})%>
        
      </div>
    
      
      <input id="postLimit"  value=" <%=postLimit%>" style="display: none;"></input>
      
     
  
     <div class="next">
      <button class='button' style="float: right;" onClick='getNext();'>Next</button>
     </div>
      
      
     
      <button class='button'  onClick="getPrevious();">Previous</button>
    
   <div class="posts">

   </div>
     
    </section>
   
    <section class="form-section">
      <form action="/admin/post" method="POST">
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          placeholder="Enter Title"
          value="<%= typeof title != 'undefined' ? title : '' %>"
        />
        <label for="">Post</label>
        <textarea class="post" name="post" placeholder="Enter Post" value="">
        </textarea>
        <button type="submit" class="button">
          Post
        </button>
      </form>
    </section>
  </div>
    
    <script src="/static/script/adminBoard.js"></script>

  </body>
</html>
